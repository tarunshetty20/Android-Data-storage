<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    tools:context="com.example.tarun.assignment5.Insertheitem">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Add New Product Item"
        android:textColor="@android:color/background_light"
        android:textSize="14pt" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="61dp"
        android:text="Item Name :"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textiname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/textidescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textiname"
        android:layout_alignStart="@+id/textiname"
        android:layout_below="@+id/textiname"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/textiprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/textidescription"
        android:layout_alignStart="@+id/textidescription"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_below="@+id/textiprice"
        android:layout_marginTop="25dp"
        android:text="Item Review : "
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/textireview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textiprice"
        android:layout_alignStart="@+id/textiprice"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonaddditem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="60dp"
        android:layout_toLeftOf="@+id/textireview"
        android:layout_toStartOf="@+id/textireview"
        android:background="@android:color/holo_green_light"
        android:text="Add" />

    <Button
        android:id="@+id/buttoncancelitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonaddditem2"
        android:layout_alignBottom="@+id/buttonaddditem2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@android:color/holo_green_light"
        android:text="Cancel" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textidescription"
        android:layout_marginTop="24dp"
        android:text="Item Price :"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textidescription"
        android:layout_alignBottom="@+id/textidescription"
        android:layout_toLeftOf="@+id/textidescription"
        android:layout_toStartOf="@+id/textidescription"
        android:text="Item Description :"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold" />


</RelativeLayout>
